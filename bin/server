#!/usr/bin/env bash
# -*- bash -*-
#
#
cmd="$1"
set -u -e -o pipefail

export PORT=4567
export PID="tmp/thin.pid"
export LOG="tmp/log.txt"
export RACK_ENV="production"

dir="$(pwd)"

if [[ "$cmd" == "start" ]]; then
  echo "--- Resetting files:"
  mkdir -p playground/tmp
  cd playground
  ../bin/www_app Public
  cd ..

  if [[ -f "playground/$PID" && -s "playground/$PID" ]]; then
    echo ""
    echo "=== killing thin server"
    kill "$(cat playground/$PID)"
    echo ""
  fi
  rm -rf playground/tmp
fi

if [[ -f playground/$LOG && ( "$cmd" == "start" || "$cmd" == "restart" ) ]]; then
  echo ""
  echo "=== removing log file"
  rm -r playground/$LOG
  echo ""
fi

if [[ -f playground/config.ru ]]; then
  config=config.ru
else
  config=$dir/specs/lib/config.ru
fi
bundle exec thin -d -c playground -l $LOG --pid $PID -p $PORT -e production -R $config $@


cd playground

sleep 0.5
if [[ -f "$PID" ]]; then
  echo ""
  if [[ "$cmd" == "start" ]]; then
    prepend=""
  else
    prepend="NEW "
  fi
  echo "=== ${prepend}SERVER: PORT: $PORT PID: $(cat $PID)"
  sleep 1.0
  echo ""
  cat $LOG
else
  cat $LOG 1>&2
  exit 1
fi


